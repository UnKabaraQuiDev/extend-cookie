{
  "manifest_version": 3,
  "name": "Extend cookies",
  "version": "1.1",
  "description": "Extend the expiration duration of cookies by domain.",
  "permissions": [
    "cookies",
    "storage",
    "webRequest",
    "webRequestBlocking"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "saml-cookies@kbra.lu"
    }
  }
}
