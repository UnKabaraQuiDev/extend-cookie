{
  "manifest_version": 2,
  "name": "7 Days SAML Cookies",
  "version": "1.0",
  "description": "Fix for shitty IAM SAML",
  "permissions": [
    "cookies",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "saml-cookies@yourdomain.local",
      "data_collection_permissions": {
        "required": ["none"],
        "collects_personal_data": false,
        "collects_location_data": false,
        "collects_web_activity": false
      }
    }
  }
}
